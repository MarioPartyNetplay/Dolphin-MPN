<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?android:attr/colorBackground">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NetPlay Session"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <!-- Status and Player Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/text_room_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status: Connected"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/text_player_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Players: 3/4"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Room Settings (Host Only) - Simplified for mobile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room:"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_room"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <!-- Host Code Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_host_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Room Code: 84c5b96b"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/button_host_code_action"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Copy"
                    android:textSize="12sp"
                    android:minWidth="60dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Buffer Size Setting - HIDDEN for mobile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/label_buffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buffer:"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_buffer_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Chat Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_chat"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Chat Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_chat_input"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Type a message..."
                    android:inputType="text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/button_send"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Send"
                    android:textSize="14sp"
                    android:minWidth="80dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Players Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Player Management Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/button_assign_ports"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Assign Ports"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/button_kick"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Kick"
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp" />

                <Button
                    android:id="@+id/button_ban"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Ban"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Game Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/button_game"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Select Game"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/button_start"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Start Game"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <Button
                android:id="@+id/button_quit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Quit NetPlay"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>