<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical">

    <!-- Game Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_share"
        android:tint="?android:attr/colorPrimary"
        android:layout_marginEnd="16dp" />

    <!-- Server Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_server_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/text_game_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Name (GAME01)"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/4 players"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:background="@drawable/rounded_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_server_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.1.100:2626"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:background="@drawable/rounded_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Join Arrow -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_media_play"
        android:tint="?android:attr/colorPrimary"
        android:layout_marginStart="8dp" />

</LinearLayout>
